<div>
    <!-- Iterate through each of the discipline lists -->
    <div class="description-field">
        <div class="resource-label field-header flex-center">
            {{localize "WOD5E.VTM.Disciplines"}}
            <a class="power-create" data-action="createSPCPower" title="{{localize 'WOD5E.VTM.AddDiscipline'}}" data-type="discipline">
                <i class="fas fa-plus"></i>
            </a>
        </div>
        <div class="description-content resource list-resource">
            <div class="items-list flexcol">
                {{#each disciplines as |discipline key|}}
                    {{#if discipline.visible}}
                        <div class="power-category">
                            <div class="flexrow power-category-header">
                                <div class="flexrow">
                                    {{#if ../locked}}
                                        <div class="resource stat-resource-background">
                                            {{discipline.value}}
                                        </div>
                                    {{else}}
                                        <input type="number" name="system.disciplines.{{key}}.value"
                                            value="{{discipline.value}}" data-name="system.disciplines.{{key}}.value"/>
                                    {{/if}}
                                    <span class="power-category-label">
                                        {{discipline.label}}
                                    </span>
                                </div>
                                <div class="item-controls">
                                    <a class="item-control item-create" data-action="createItem" title="{{localize 'WOD5E.Add'}}" data-type="power" data-subtype="{{key}}">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a class="item-control power-delete" data-action="deleteSPCPower" title="{{localize 'WOD5E.Delete'}}" data-type="power" data-id="{{key}}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            {{#each discipline.powers as |power id|}}
                                <div class="collapsible-container">
                                    <div class="item flexrow" data-drag="true" data-item-id="{{power.id}}" data-document-uuid="{{power.uuid}}" data-type="Item">
                                        <div class="item-image clickable" data-action="itemChat" data-item-id="{{power._id}}">
                                            <img src="{{power.img}}" title="{{power.name}}" width="24" height="24" alt="{{power.name}}" />
                                        </div>
                                        <div class="item-name{{#if power.system.enrichedDescription}} collapsible{{/if}}" {{#if power.system.enrichedDescription}}data-action="toggleCollapse"{{/if}}>
                                            {{power.name}}
                                        </div>
                                        <div class="item-controls">
                                            <a class="item-image rollable-item" data-action="roll" data-use-absolute-value="true" data-absolute-value="{{discipline.value}}"
                                                data-select-dialog="false" data-label="{{power.name}}" {{#if ../noAdvancedDice}} data-disable-advanced-dice="true"{{/if}}>
                                                <i class="fa-solid fa-dice-d10"></i>
                                            </a>
                                            <a class="item-control item-edit" data-action="itemEdit" data-item-id="{{power._id}}" title="{{localize 'WOD5E.Edit'}}"><i
                                                class="fas fa-edit"></i></a>
                                            <a class="item-control item-delete" data-action="itemDelete" data-item-id="{{power._id}}" title="{{localize 'WOD5E.Delete'}}"><i
                                                class="fas fa-trash"></i></a>
                                        </div>
                                    </div>
                                    <div class="collapsible-content trait-description">
                                        {{{power.system.enrichedDescription}}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
